# ==============================
# General Config
# ==============================
NODE_ENV=development
PORT=5000


# ==============================
# Database
# ==============================
DATABASE_URL=your_database_connection_string


# ==============================
# Bcrypt
# ==============================
BCRYPT_SALT_ROUNDS=10
DEFAULT_PASS=your_default_password


# ==============================
# JWT Configuration
# ==============================
JWT_ACCESS_SECRET=your_jwt_access_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d


# ==============================
# Password Reset
# ==============================
RESET_PASS_UI_LINK=http://localhost:3000/reset-password


# ==============================
# Admin Credentials
# ==============================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password


# ==============================
# Mailgun SMTP
# ==============================
MAILGUN_SMTP_USER=your_mailgun_smtp_user
MAILGUN_SMTP_PASS=your_mailgun_smtp_password
MAILGUN_FROM_EMAIL=no-reply@yourdomain.com


# ==============================
# Cloudinary Config
# ==============================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLIENT_SITE_URL=http://localhost:3000


# ==============================
# DigitalOcean Spaces (S3)
# ==============================
DO_SPACES_ACCESS_KEY=your_do_spaces_access_key
DO_SPACES_SECRET_KEY=your_do_spaces_secret_key
DO_SPACES_REGION=your_region
DO_SPACES_ENDPOINT=https://your-endpoint.com
DO_SPACES_BUCKET=your_bucket_name
CUSTOM_CDN_DOMAIN=https://your-cdn-domain.com


# ==============================
# Stripe Payment System
# ==============================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
WEBHOOK_ENDPOINT=https://your-api-domain.com/webhook


# ==============================
# Twilio SMS / WhatsApp
# ==============================
TWILIO_SID=your_twilio_account_sid
TWILIO_AUTH=your_twilio_auth_token
TWILIO_PHONE=your_twilio_phone_number


# ==============================
# Google Maps
# ==============================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key


# ==============================
# Firm (Dedicated App)
# ==============================
FIRM_RESET_PASS_UI_LINK=http://localhost:4000/reset-password
FIRM_CLIENT_URL=http://localhost:4000


# ==============================
# Redis Config
# ==============================
REDIS_USERNAME=default
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
